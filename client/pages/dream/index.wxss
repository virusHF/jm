.button-hover {
  opacity: 0.9;
  transform: scale(0.95, 0.95);
}

button::after {
  border: none;
}

button {
  height: 100rpx;
  width: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: static !important;
  border: none;
  background-color: transparent;
  outline: none;
}